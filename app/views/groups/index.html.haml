%section.content-header
  %h1 
    Groups
    = link_to new_group_path, class: 'btn btn-success pull-right'do
      %i.fa.fa-group
      %b New Group 
%section.content
  .row
    .col-xs-12
      .box.box-primary
        .box-body.table-responsive
          %table.table.table-hover.table-bordered
            %thead
              %tr
                %th.col-xs-2 Name
                %th.col-xs-4 Description
                %th.col-xs-2 Owner
                %th.col-xs-4 Actions
            %tbody     
              = render @groups
          .pagination-container
            = paginate @groups
#group-widget-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ data: { dismiss: 'modal'}}
          %span &times;
        %h4.modal-title
      .modal-body
        %pre.code
        %span.hint
          %b Info:
          Copy and insert in your website.
          %h4 Preview:
        .well
          .widget-preview
      .modal-footer
        %button.btn.btn-default{ data: { dismiss: 'modal' }} Close            
