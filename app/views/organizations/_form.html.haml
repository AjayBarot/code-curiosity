.col-sm-6
  = simple_form_for @org do |f|
    = f.input :name
    = f.input :github_handle, hint: 'i.e: "joshsoftware" form https://github.com/"joshsoftware"'
    = f.input :website
    = f.input :contact
    = f.input :description, as: :text
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', organization_path(@org), class: 'btn btn-default' 
