%tr
  %td
    %span.rank= subscription_counter  + 1
    = image_tag avatar_url(subscription.user), widht: 40, height: 40, class: 'img-circle'
  %td
    = link_to subscription.user.github_handle, user_path(subscription.user), class: 'users-list-name'
  %td= subscription.commits_count
  %td= subscription.activities_count
  %td= format_points(subscription.points)
