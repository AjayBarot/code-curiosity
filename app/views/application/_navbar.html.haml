.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      = link_to root_path, class: "navbar-brand" do 
        %font Code Curiosity
    #navbar.navbar-collapse.collapse
      .pull-left{style: "margin-top:10px;margin-left:580px;"}
        = form_tag change_round_path do
          .row
            = select_tag :round, options_for_select(@rounds.collect{ |r| [r.name, r.id] }, @current_round.id), class: 'form-control', :onchange => "this.form.submit()"
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to "My Profile" ,users_path(id:current_user._id)
          %li= link_to current_user.email, "#"
          %li= link_to "Log out", destroy_user_session_path, method: :delete 
        - else
          %li= link_to "Login", omniauth_authorize_path(:user, :github) 

        
